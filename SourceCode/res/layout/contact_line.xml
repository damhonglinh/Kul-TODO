<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/contactLinecontactName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
        android:layout_weight="3"
        android:textIsSelectable="false"
        android:textSize="@dimen/contactLineContactNameFontSize" />

    <TextView
        android:id="@+id/contactLinecontactPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_activity_horizontal_margin_large"
        android:layout_weight="2"
        android:textIsSelectable="false"
        android:textSize="@dimen/contactLineContactDetailFontSize" />

    <TextView
        android:id="@+id/contactLinecontactEmail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/main_activity_horizontal_margin_large"
        android:layout_weight="2"
        android:textIsSelectable="false"
        android:textSize="@dimen/contactLineContactDetailFontSize" />

</LinearLayout>